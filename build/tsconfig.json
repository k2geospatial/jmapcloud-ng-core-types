{
  "compilerOptions": {
    "outDir": "../public/transpiled",
    "baseUrl": "../public",
    "types": ["maplibre-gl"],
    "strict": true,
    "allowSyntheticDefaultImports": true, // needed for Maplibre https://www.typescriptlang.org/tsconfig#allowSyntheticDefaultImports
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "lib": [
      "es2017",
      "dom",
      "es5",
      "es2015.promise"
    ]
  },
  "include": [
    "../public/**/*"
  ]
}
